---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("inline-block decoration-blue-600/50 hover:decoration-blue-700/70 hover:text-blue-700/80 dark:decoration-blue-300/60 hover:dark:decoration-blue-500/70 text-current hover:dark:text-blue-500/70 transition-colors duration-300 ease-in-out", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
